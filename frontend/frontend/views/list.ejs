<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Generation Requests</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
        }
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        h1 {
            color: #333;
            text-align: center;
        }
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        a {
            text-decoration: none;
            color: #007bff;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>List of Generation Requests</h1>

        <a href="/list?gallery=1">Show Gallery</a>

        <table>
            <thead>
                <tr>
                    <th>Prompt</th>
                    <th>Status</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <% for (const request of requests) { %>
                    <tr>
                        <td><%= request.prompt %></td>
                        <td><%= request.status %></td>
                        <td>
                            <% if (request.status === 'DONE') { %>
                                <a href="/details/<%= request.uuid %>">Show</a>
                            <% } else { %>
                                <em>Not available</em>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div style="text-align: center;">
            <a href="/">Submit another prompt</a>
        </div>
    </div>
</body>
</html>
