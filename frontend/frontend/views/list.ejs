<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Generation Requests</title>
</head>
<body>
    <h1>List of Generation Requests</h1>

    <a href="/list?gallery=1">Show Gallery</a>
    <table>
        <tr>
            <th>Prompt</th>
            <th>Status</th>
            <th>Image</th>
        </tr>
    <% for (const request of requests) { %>
        <tr>
            <td><%= request.prompt %></td>
            <td><%= request.status %></td>
            <td>
                <% if (request.status === 'DONE') { %>
                    <a href="/details/<%= request.uuid %>">Show</a>
                <% } else { %>
                    <em>Not available</em>
                <% } %>
            </td>
        </tr>
    <% } %>
    </table>
    <br>
    <a href="/">Submit another prompt</a>
</body>
</html>
